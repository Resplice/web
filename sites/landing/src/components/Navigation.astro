---
import RespliceLogoWide from '@components/RespliceLogoWide.astro'

const links = [
	{
		label: 'Product',
		href: '/#product'
	},
	{
		label: 'Features',
		href: '/#features'
	},
	{
		label: 'FAQ',
		href: '/#faq'
	}
	// {
	// 	label: 'Changelog',
	// 	href: '/changelog'
	// }
]
---

<header class="absolute inset-x-0 top-0 z-50">
	<nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
		<div class="flex lg:flex-1">
			<a href="/" class="-m-1.5 p-1.5">
				<span class="sr-only">Resplice</span>
				<RespliceLogoWide width="10rem" />
			</a>
		</div>
		<div class="hidden lg:flex lg:gap-x-12">
			{
				links.map((link) => (
					<a href={link.href} class="text-sm font-semibold leading-6 text-gray-900">
						{link.label}
					</a>
				))
			}
		</div>
		<div class="hidden lg:flex lg:flex-1 lg:justify-end">
			<a href="https://app.resplice.com" class="text-sm font-semibold leading-6 text-gray-900">
				Go to App <span aria-hidden="true">&rarr;</span>
			</a>
		</div>
	</nav>
	<!-- Mobile menu -->
	<div
		class="lg:hidden fixed z-50 bottom-0 left-0 w-full flex items-center justify-center h-max p-4"
	>
		<div
			class="px-6 dark:text-slate-200 max-w-full overflow-auto flex space-x-6 font-medium text-sm rounded-full dark:bg-zinc-800/90 shadow-lg shadow-zinc-800/5 ring-1 ring-brand-primary dark:ring-white/10 backdrop-blur"
			role="navigation"
		>
			{
				links.map((link) => (
					<a
						href={link.href}
						class="relative transition hover:text-brand-blue font-semibold tracking-wide py-3"
					>
						{link.label}
					</a>
				))
			}
		</div>
	</div>
</header>
