{
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:apps": "turbo run build --filter './apps/*'",
		"build:packages": "turbo run build --filter './packages/*'",
		"build:overseer": "turbo run build --filter overseer",
		"build:reauth": "turbo run build --filter reauth",
		"build:resplice": "turbo run build --filter resplice",
		"build:components": "turbo run build --filter components",
		"build:proto": "turbo run build --filter proto",
		"build:utils": "turbo run build --filter utils",
		"dev": "turbo run dev",
		"dev:overseer": "turbo run dev --filter overseer",
		"dev:reauth": "turbo run dev --filter reauth",
		"dev:resplice": "turbo run dev --filter resplice",
		"dev:components": "turbo run dev --filter components",
		"preview": "turbo run preview",
		"preview:reauth": "turbo run preview --filter reauth",
		"preview:resplice": "turbo run preview --filter resplice",
		"test": "turbo run test",
		"test:utils": "turbo run test --filter utils",
		"lint": "turbo run lint",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"eslint": "^8.46.0",
		"eslint-config-custom": "*",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"turbo": "1.10.12",
		"typescript": "^5.1.6"
	},
	"packageManager": "npm@9.8.0",
	"workspaces": [
		"apps/*",
		"packages/*",
		"sites/*"
	]
}
